<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Safety"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Emergency Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/content_card"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Emergency SOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#B71C1C"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:text="Send your live GPS location instantly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnEmergency"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SEND SOS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>

        <!-- Emergency History Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/content_card"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Emergency History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:text="View all past emergency records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="VIEW HISTORY"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Step Counter Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/content_card"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Step Counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:text="Track your daily physical activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnSteps"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="START COUNTING"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"/>
        </LinearLayout>

        <!-- Step History Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/content_card">

            <TextView
                android:text="Step History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:text="View your past step records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnStepHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="VIEW HISTORY"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
