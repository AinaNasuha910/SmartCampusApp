<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- EDIT: Image di atas -->
        <ImageView
            android:id="@+id/historyPhoto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Item photo"
            android:background="#F2F2F2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/historyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/historyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/historyDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date â€¢ Time"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/historyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code: 1234"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
