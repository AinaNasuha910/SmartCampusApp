<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ReportLost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/layoutReportLost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/TitleReportLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_a_lost_item"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp" />

        <!-- Item Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_name"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/ItemName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="e.g. Wallet, Keys, Phone"
            android:inputType="textPersonName" />

        <!-- Item Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/ItemDescription"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="e.g. Black wallet, has student card inside"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:maxLines="4" />

        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <!-- Location row + Pick Map button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Location"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_round"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="Type location or pick from map"
                android:inputType="text" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnPickMap"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Pick from Map"
                android:background="@drawable/bg_button_outline" />
        </LinearLayout>

        <!-- EDIT: Phone Number (WAJIB) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number (WhatsApp)"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="e.g. 60123456789"
            android:inputType="phone" />

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Date picker -->
            <LinearLayout
                android:id="@+id/btnPickDate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_round"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:contentDescription="Pick date" />

                <TextView
                    android:id="@+id/SelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- Time picker -->
            <LinearLayout
                android:id="@+id/btnPickTime"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_round"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:contentDescription="Pick time" />

                <TextView
                    android:id="@+id/SelectedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Photo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input_round"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/PhotoFileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No file selected"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/FileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Change photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload photo"
                android:layout_marginStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Handover Point -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handover Point"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/HandoverOption"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:spinnerMode="dropdown"
            android:entries="@array/handover_options" />

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/bg_button_outline" />

            <View
                android:layout_width="14dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</ScrollView>
