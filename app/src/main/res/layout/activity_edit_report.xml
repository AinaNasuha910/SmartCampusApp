<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EditRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Report"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/editPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#F2F2F2"
            android:contentDescription="Photo"/>

        <!-- Read-only info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/ViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ViewDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim Code"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ViewClaimCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <!-- Editable fields -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name (Editable)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/EditItemName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="Item name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Description (Editable)"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/EditItemDesc"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/bg_input_round"
            android:padding="14dp"
            android:hint="Item description"
            android:inputType="textMultiLine"
            android:gravity="top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number (Editable)"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/EditPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_round"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="e.g. 60123456789"
            android:inputType="phone"/>

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <Button
                android:id="@+id/btnCancelEdit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/bg_button_outline"/>

            <View
                android:layout_width="14dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnSaveEdit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_black"/>
        </LinearLayout>

        <!-- EDIT: Delete button -->
        <Button
            android:id="@+id/btnDeleteItem"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Delete Item"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_button_outline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</ScrollView>
